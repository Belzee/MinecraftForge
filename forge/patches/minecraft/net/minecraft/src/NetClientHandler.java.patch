+                        out.data = new byte[]{0, 0, 0, 0, 0};
+                        out.length = out.data.length;
+                        this.addToSendQueue(out);
+                        break;
+                }
+            }
+        }
+        else 
+        {
+            MessageManager.dispatchMessage(mc.thePlayer, packet.channel, packet.data);
+        }
